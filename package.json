{
  "name": "planning-poker",
  "author": "University of York",
  "description": "An app to allow teams to estimate and refine tasks using a planning poker activity",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "npm run compile && next dev",
    "compile": "tsc",
    "build": "npm run compile && next build",
    "start": "npm run build && next start",
    "test": "jest",
    "format": "prettier --write .",
    "checkformat": "prettier --check .",
    "lint": "xo .",
    "check": "npm run checkformat && npm run lint && npm run test",
    "formatandcheck": "npm run format && npm run lint && npm run test",
    "fc": "npm run formatandcheck",
    "package": "npm run build && sls package",
    "package:dev": "cross-env STACK_ENV=dev npm run package",
    "package:live": "cross-env STACK_ENV=prod npm run package",
    "deploy": "npm run build && sls deploy",
    "deploy:dev": "cross-env STACK_ENV=dev npm run deploy",
    "deploy:live": "cross-env STACK_ENV=prod npm run deploy"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.54.1",
    "@fortawesome/fontawesome-svg-core": "^6.1.0",
    "@fortawesome/free-regular-svg-icons": "^6.1.0",
    "@fortawesome/free-solid-svg-icons": "^6.1.0",
    "@fortawesome/react-fontawesome": "^0.1.18",
    "dotenv-webpack": "^7.1.0",
    "express": "^4.17.3",
    "next": "12.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "serverless-http": "^2.7.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@aws-sdk/types": "^3.54.1",
    "@babel/eslint-parser": "^7.17.0",
    "@types/jest": "^27.4.1",
    "@types/node": "17.0.21",
    "@types/react": "17.0.40",
    "@types/uuid": "^8.3.4",
    "cross-env": "^7.0.3",
    "eslint": "8.11.0",
    "eslint-config-next": "12.1.0",
    "eslint-config-xo-nextjs": "^4.1.0",
    "eslint-config-xo-react": "^0.26.0",
    "jest": "^27.5.1",
    "jest-fetch-mock": "^3.0.3",
    "prettier": "^2.6.0",
    "serverless": "^3.7.8",
    "serverless-apigw-binary": "^0.4.4",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typescript": "4.6.2",
    "xo": "^0.48.0"
  }
}
