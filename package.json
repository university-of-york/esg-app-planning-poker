{
  "name": "planning-poker",
  "author": "University of York",
  "description": "An app to allow teams to estimate and refine tasks using a planning poker activity",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "compile": "tsc",
    "dev": "npm run compile && next dev",
    "build": "npm run compile && next build",
    "start": "npm run build && next start",
    "await": "wait-on http://localhost:3000",
    "format": "prettier --write .",
    "checkformat": "prettier --check .",
    "cf": "npm run checkformat",
    "lint": "xo .",
    "cypress:run": "npm run await && cypress run",
    "cypress:open": "npm run await && cypress open",
    "test:unit": "jest",
    "test:functional": "npm-run-all --parallel start cypress:run -r",
    "test:interactive": "npm-run-all --parallel start cypress:open -r",
    "test": "npm run test:unit && npm run test:functional",
    "tu": "npm run test:unit",
    "tf": "npm run test:functional",
    "ti": "npm run test:interactive",
    "check": "npm run checkformat && npm run lint && npm run test",
    "formatandcheck": "npm run format && npm run lint && npm run test",
    "fc": "npm run formatandcheck",
    "package": "npm run build && sls package",
    "package:dev": "cross-env STACK_ENV=dev npm run package",
    "package:prod": "cross-env STACK_ENV=prod npm run package",
    "deploy": "npm run build && sls deploy",
    "deploy:dev": "cross-env STACK_ENV=dev npm run deploy",
    "deploy:prod": "cross-env STACK_ENV=prod npm run deploy"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.54.1",
    "@fortawesome/fontawesome-svg-core": "^6.1.0",
    "@fortawesome/free-brands-svg-icons": "^6.1.0",
    "@fortawesome/free-regular-svg-icons": "^6.1.0",
    "@fortawesome/free-solid-svg-icons": "^6.1.0",
    "@fortawesome/react-fontawesome": "^0.1.18",
    "dotenv-webpack": "^7.1.0",
    "express": "^4.17.3",
    "luxon": "^2.3.1",
    "next": "12.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "serverless-http": "^2.7.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@aws-sdk/types": "^3.54.1",
    "@babel/eslint-parser": "^7.17.0",
    "@jest/globals": "^27.5.1",
    "@types/cypress": "^1.1.3",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/luxon": "^2.3.1",
    "@types/node": "17.0.21",
    "@types/react": "17.0.40",
    "@types/uuid": "^8.3.4",
    "@types/wait-on": "^5.3.1",
    "cross-env": "^7.0.3",
    "cypress": "^9.5.2",
    "eslint": "8.11.0",
    "eslint-config-next": "12.1.0",
    "eslint-config-xo-nextjs": "^4.1.0",
    "eslint-config-xo-react": "^0.26.0",
    "eslint-plugin-cypress": "^2.12.1",
    "jest": "^27.5.1",
    "jest-fetch-mock": "^3.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.0",
    "serverless": "^3.7.8",
    "serverless-apigw-binary": "^0.4.4",
    "serverless-plugin-typescript": "^2.1.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typescript": "4.6.2",
    "wait-on": "^6.0.1",
    "xo": "^0.48.0"
  }
}
